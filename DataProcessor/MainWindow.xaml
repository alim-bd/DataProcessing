<Window x:Class="DataProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataProcessor"
        mc:Ignorable="d"
        Title="Data Processor" Height="462.245" Width="594.898">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <StackPanel HorizontalAlignment="Center" Margin="0,80,0,50">
                <TextBlock FontSize="26" FontWeight="Bold">Map Data Process</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,30" HorizontalAlignment="Center">
                <TextBox x:Name="txbPath" Width="300" Height="20" Margin="10"></TextBox>
                <Button x:Name="btnBrowse" Width="60" Height="20" Content="Browse" Margin="10" Click="BtnBrowse_Click" ></Button>
            </StackPanel>
            <StackPanel>
                <Button x:Name="btnProcess" Width="140" Height="45" Content="Process" Margin="10" FontSize="20" Click="BtnProcess_Click"></Button>
                <ProgressBar x:Name="prgProcess" Width="450" Height="10" Margin="10,20,10,80"></ProgressBar>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
